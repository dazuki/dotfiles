#!/usr/bin/env zsh

# go home
h() {
  cd $HOME/$1 ; clear
}

# better docker ps
docker() {
  case $1 in
    ps)
      shift
      command dops "$@"
      ;;
    *)
      command docker "$@";;
  esac
}

# make dir
md() {
  mkdir -p $1
  cd $1
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function pi() {
    if [ -z "$1" ]; then
        echo "Searchterm is required! Example: pi firefox"
        return 1
    fi

    packages=$(LC_ALL=C paru -Ss --color=always "$@" | \
    grep -v '^    ' | \
    sed -E 's/ [^ ]+\[[0-9][^]]+\]//' | \
    fzf --ansi --multi --layout=reverse --height=80% --border \
        --header 'TAB: Mark | ENTER: Install' \
        --preview 'paru -Si {1}' | \
    awk '{print $1}')

    if [ -n "$packages" ]; then
        paru -S $(echo "$packages")
    fi
}
