#!/usr/bin/env zsh

# go home
h() {
  cd $HOME/$1 ; clear
}

# better docker ps
docker() {
  case $1 in
    ps)
      shift
      command dops "$@"
      ;;
    *)
      command docker "$@";;
  esac
}

# make dir
md() {
  mkdir -p $1
  cd $1
}

# git diff
gdiff() {
  git diff --no-index "$@"
}

# git diff - minimal
gdiffm() {
  git diff --no-index "$@" | delta --features=minimal
}

# REMINDER: To use 'gdiff' until it's ingrained into my brain!
diff() {
  echo "!! Use 'gdiff <file|dir> <file|dir>' for delta-powered git diff !!"
  echo "(This setup uses git diff --no-index instead of GNU diff.)"
}

# original GNU diff
odiff() {
  command diff "$@"
}

# yazi dir helper
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

# pacman search
function pi() {
    if [ -z "$1" ]; then
        echo "Searchterm is required! Example: pi firefox"
        return 1
    fi

    packages=$(LC_ALL=C paru -Ss --color=always "$@" | \
    grep -v '^    ' | \
    sed -E 's/ [^ ]+\[[0-9][^]]+\]//' | \
    fzf --ansi --multi --layout=reverse --height=80% --border \
        --header 'TAB: Mark | ENTER: Install' \
        --preview 'paru -Si {1}' | \
    awk '{print $1}')

    if [ -n "$packages" ]; then
        paru -S $(echo "$packages")
    fi
}
