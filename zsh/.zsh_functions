#!/usr/bin/env zsh

# go home
h() {
  cd $HOME/$1 ; clear
}

# better docker ps
docker() {
  case $1 in
    ps)
      shift
      command dops "$@"
      ;;
    *)
      command docker "$@";;
  esac
}

# make dir
md() {
  mkdir -p $1
  cd $1
}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

pi() {
  # Check if paru is working first
  if ! paru -Sl &>/dev/null; then
    echo "Error: paru failed. Try running 'paru -Syy' to refresh databases."
    return 1
  fi
  
  paru -Sl | awk '{ 
      if ($3 != "unknown-version") 
          printf "%s \033[36m%s\033[0m\n", $2, $3; 
      else 
          print $2 
  }' | \
    fzf --ansi \
        --preview '
          pkg=$(echo {} | awk "{print \$1}");
          echo -e "\e[0;32mInstallation Status:\e[0m";
          paru -Qi "$pkg" &>/dev/null \
            && echo -e "\e[0;32mInstalled\e[0m" \
            || echo -e "\e[0;31mNot Installed\e[0m";
          echo;
          paru -Si "$pkg" 2>/dev/null || echo "Could not fetch package info"
        ' | \
    awk '{print $1}' | \
    xargs -ro paru -S
}
