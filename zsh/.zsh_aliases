# logs
alias log-upg="grep -i upgraded /var/log/pacman.log | awk '{gsub(/[\[\]]/, \"\", \$1); split(\$1, dt, \"T\"); split(dt[2], t, \"[-+]\"); printf \"\033[34m%s %s\033[0m \033[33m%s\033[0m %s %s %s\n\", dt[1], t[1], \$4, \$5, \$6, \$7}'"
