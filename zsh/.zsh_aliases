#!/usr/bin/env zsh

# filesystem aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....="cd ../../.."
alias .....="cd ../../../.."

# helpers
alias grep='grep --color=auto'
alias df='duf --sort size --hide special'
alias du='du -h -c' # calculate disk usage for a folder
alias ncdu='ncdu --color dark-bg'
alias lpath='echo $PATH | tr ":" "\n"' # list the PATH separated by new lines

# tmux aliases
alias ta="tmux attach"
alias tls="tmux ls"
alias tat="tmux attach -t"
alias tns="tmux new-session -s"

# kitty terminal
alias ssh="kitten ssh"

# nvim
alias n="nvim"
alias vim="nvim"

# nano > micro
#alias nano="micro"
alias mc="micro"

# helix
alias hx="helix"

# copyparty
alias cparty="copyparty -v ./:/:r"

# other shorthand aliases
alias rm="rm -I"

# cd to folder
alias web="cd /var/www/"
alias vinyl="cd /var/www/bokbindaregatan.se/vinyl-laravel/"

# custom alias
alias c="clear"
alias ls="eza -hgo --group-directories-first --git-repos-no-status --icons=always"
alias lls="ls"
alias art="php artisan"
alias redis-cli="valkey-cli"
alias yay="paru"
alias diff="delta --color-only --diff-so-fancy --paging=never"

