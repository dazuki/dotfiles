#!/usr/bin/env zsh

# filesystem aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....="cd ../../.."
alias .....="cd ../../../.."

# helpers
alias grep='grep --color=auto'
alias df='duf --sort size --hide special'
alias du='du -h -c' # calculate disk usage for a folder
alias ncdu='ncdu --color dark'
alias lpath='echo $PATH | tr ":" "\n"' # list the PATH separated by new lines

# tmux aliases
alias ta="tmux attach"
alias tls="tmux ls"
alias tat="tmux attach -t"
alias tns="tmux new-session -s"

# kitty terminal
alias ssh="kitten ssh"
alias kcat="kitten icat"

# nvim
alias n="nvim"
alias vim="nvim"

# nano > micro
#alias nano="micro"
alias mc="micro"

# helix
alias hx="helix"

# copyparty
alias cparty="copyparty -v ./:/:r"

# lazygit/docker
alias lzg="lazygit"
alias lzd="lazydocker"

# oxker (docker)
alias oxker="oxker -ct"

# gemini pro
# alias gemini="gemini --model auto" 

# other shorthand aliases
alias rm="rm -I"

# cd to folder
alias web="cd /var/www/"
alias vinyl="cd /var/www/bokbindaregatan.se/vinyl-laravel/"

# custom alias
alias c="clear"
alias ls="eza -hgo --group-directories-first --git-repos-no-status --icons=always"
alias lls="ls"
alias art="php artisan"
alias redis-cli="valkey-cli"
alias yay="paru"
alias diff="delta --color-only --diff-so-fancy --paging=never"
alias log-upg="grep -i upgraded /var/log/pacman.log | awk '{gsub(/[\[\]]/, \"\", \$1); split(\$1, dt, \"T\"); split(dt[2], t, \"[-+]\"); printf \"\033[34m%s %s\033[0m \033[33m%s\033[0m %s %s %s\n\", dt[1], t[1], \$4, \$5, \$6, \$7}'"
alias pall="pacman -Sl | awk '{print \$2(\$4==\"[installed]\"? \" \x1b[32m[INSTALLED]\x1b[0m\" : \"\")}' | fzf --ansi --multi --preview 'pacman -Si {1}' | xargs -r paru -S"
